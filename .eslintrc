{
	"extends": "xo/esnext",
	"env": {
		"node": false,
		"browser": true
	},
	"globals": {
		"Polymer": true,
		"NodeCG": true,
		"nodecg": true,
		"customElements": true,
		"Lexeme": true
	},
	"plugins": [
		"html"
	],
	"rules": {
		"new-cap": [
			2,
			{
				"capIsNewExceptions": [
					"NodeCG.Replicant",
					"nodecg.Replicant",
					"Polymer",
					"Polymer.GestureEventListeners",
					"Polymer.MutableData",
					"Polymer.NodeCGReplicantTargeting",
					"Polymer.SCDataBindingHelpers"
				]
			}
		]
	}
}
